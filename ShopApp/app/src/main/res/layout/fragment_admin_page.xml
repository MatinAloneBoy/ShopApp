<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".userUi.profile.settings.SettingsFragment"
    android:background="@color/backgroundDark">
    <RelativeLayout
        android:id="@+id/admin_page_fragment_title_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/admin_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADMIN"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/primaryLight"/>
        <View
            android:id="@+id/divider"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="0dp"
            android:background="@color/primaryLight" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Admin_Buttons_frame"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="126dp">

        <Button
            android:id="@+id/admin_page_ListOfProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/Show_All_Prices_Button"
            android:background="@drawable/button_background"
            android:textColor="@color/backgroundDark"
            android:text="List Of Products" />

        <TextView
            android:id="@+id/Count_Product_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADMIN"
            android:textSize="15dp"
            android:layout_below="@+id/admin_page_ListOfProducts"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/primaryLight"/>

        <Button
            android:id="@+id/List_Of_Sellers_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_page_ListOfProducts"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background"
            android:textColor="@color/backgroundDark"
            android:text="List Of Sellers"
            />


        <Button
            android:id="@+id/Show_All_Prices_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_background"
            android:text="Show All Prices"
            android:textColor="@color/backgroundDark"/>


        <Button
            android:id="@+id/Best_Sellers_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background"
            android:layout_below="@+id/List_Of_Sellers_Button"
            android:text="Best Seller"
            android:textColor="@color/backgroundDark" />




    </RelativeLayout>
</RelativeLayout>