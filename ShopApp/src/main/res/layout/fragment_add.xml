<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:background="@color/backgroundDark">


    <RelativeLayout
        android:id="@+id/add_frame_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Product Name"
            android:padding="10dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/textDark"
            android:textColorHint="#757575" />

        <EditText
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_background"
            android:hint="Product Price"
            android:padding="10dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/textDark"
            android:textColorHint="#757575" />


        <EditText
            android:id="@+id/product_descriptions"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/product_price"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_background"
            android:hint="Descriptions"
            android:inputType="text"
            android:lines="5"
            android:maxLines="5"
            android:padding="10dp"
            android:singleLine="false"
            android:textAlignment="center"
            android:textColor="@color/textDark"
            android:textColorHint="#757575" />


        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="ADD"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/backgroundDark"
            android:background="@drawable/button_background"
            android:layout_below="@+id/product_descriptions"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_frame_bottom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:padding="30dp">

        <ImageView
            android:id="@+id/product_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_add_circle"
            android:background="@drawable/edit_text_background"/>
        <Button
            android:id="@+id/add_photo_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/backgroundDark"
            android:background="@drawable/button_background"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</RelativeLayout>





